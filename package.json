{
	"name": "@browserfs/core",
	"version": "0.0.8",
	"description": "A filesystem in your browser",
	"main": "dist/index.js",
	"types": "dist",
	"keywords": [
		"filesystem",
		"node",
		"storage"
	],
	"type": "module",
	"homepage": "https://github.com/browser-fs/core",
	"author": "John Vilk <jvilk@cs.umass.edu>",
	"contributors": [
		{
			"name": "dr-vortex",
			"email": "jp@drvortex.dev",
			"url": "https://drvortex.dev"
		}
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/browser-fs/core.git"
	},
	"bugs": {
		"url": "https://github.com/browser-fs/core/issues"
	},
	"engines": {
		"node": ">= 18"
	},
	"exports": {
		"./*": "./dist/*"
	},
	"typesVersions": {
		"*": {
			"*": [
				"./dist/*"
			]
		}
	},
	"scripts": {
		"format": "prettier --write src test",
		"format:check": "prettier --check src test",
		"lint": "eslint src test",
		"test": "cross-env NODE_OPTIONS=--experimental-vm-modules npx jest",
		"build": "node scripts/build.mjs",
		"build:docs": "typedoc --out docs --name BrowserFS src/index.ts",
		"prepublishOnly": "npm run build"
	},
	"devDependencies": {
		"@jest/globals": "^29.5.0",
		"@types/archiver": "~2.1.2",
		"@types/jest": "^29.5.1",
		"@types/node": "^14.18.62",
		"@typescript-eslint/eslint-plugin": "^5.55.0",
		"@typescript-eslint/parser": "^5.55.0",
		"archiver": "~2.1.1",
		"buffer": "~5.1.0",
		"cross-env": "^7.0.3",
		"esbuild": "^0.17.18",
		"eslint": "^8.36.0",
		"jest": "^29.5.0",
		"prettier": "^2.8.7",
		"ts-jest": "^29.1.0",
		"typedoc": "^0.25.1",
		"typescript": "^4.9.5"
	}
}
