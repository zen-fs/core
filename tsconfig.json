{
	"compilerOptions": {
		"declaration": true,
		"lib": ["ESNext"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "dist",
		"resolveJsonModule": true,
		"rootDir": "src",
		"strict": true,
		"target": "ES2022",
		"verbatimModuleSyntax": true,
		"useDefineForClassFields": true,
		"types": []
	},
	"include": ["src/**/*.ts", "types/uint8array.d.ts"],
	"typedocOptions": {
		"entryPoints": ["./src/index.ts"],
		"name": "ZenFS",
		"out": "docs",
		"plugin": [],
		"projectDocuments": ["documentation/*.md", "readme.md"],
		"excludeReferences": true
	}
}
