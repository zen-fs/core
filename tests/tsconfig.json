{
	"type": "module",
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ES2022",
		"noEmit": true,
		"lib": ["ESNext", "ESNext.Disposable"],
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"allowImportingTsExtensions": true
	},
	"include": ["**/*.ts", "*.ts"]
}
